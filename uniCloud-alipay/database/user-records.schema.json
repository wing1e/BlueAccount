{
	"bsonType": "object",
	"required": ["openid", "type", "category", "amount", "date"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"openid": {
			"description": "微信用户唯一标识",
			"bsonType": "string",
			"foreignKey": "user.openid",
			"errorMessage": {
				"required": "{openid}不能为空"
			}
		},
		"date": {
			"description": "记录的日期",
			"bsonType": "string"
		},
		"timestamp": {
			"description": "记录的时间戳",
			"bsonType": "timestamp",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"amount": {
			"bsonType": "double",
			"minimum": 0,
			"errorMessage": {
				"required": "金额不能为空",
				"minimum": "金额必须大于0"
			}
		},
		"type": {
			"bsonType": "string",
			"enum": ["income", "expense"],
			"errorMessage": {
				"required": "{type}不能为空",
				"enum": "类型只能是 income 或 expense"
			}
		},
		"category": {
			"bsonType": "string",
			"errorMessage": {
				"required": "{category}不能为空"
			}
		},
		"note": {
			"description": "描述",
			"bsonType": "string"
		}
	}
}