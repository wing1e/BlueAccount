.list-index {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #F2F6F9;
  padding: 0rpx 15rpx 5rpx;
}
.list-index .detail {
  width: 100%;
  height: 100%;
}
.list-index .detail .list-scroll {
  width: 100%;
  height: 100%;
  overflow: auto;
}
.list-index .detail .list-scroll .list-item .list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  position: relative;
}
.list-index .detail .list-scroll .list-item .list .item-data {
  width: 15%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  left: 0;
  height: calc(100% + 10rpx);
}
.list-index .detail .list-scroll .list-item .list .item-data .data-word {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.list-index .detail .list-scroll .list-item .list .item-data .data-word .day {
  font-weight: 800;
  font-size: 26rpx;
  color: #000;
}
.list-index .detail .list-scroll .list-item .list .item-data .data-word .year {
  font-weight: 600;
  font-size: 18rpx;
  color: #909090;
}
.list-index .detail .list-scroll .list-item .list .item-data .data-line {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}
.list-index .detail .list-scroll .list-item .list .item-data .data-line .dot {
  width: 20rpx;
  aspect-ratio: 1/1;
  border-radius: 20rpx;
  background-color: #00B6E6;
}
.list-index .detail .list-scroll .list-item .list .item-data .data-line .line {
  border-left: 3rpx dashed #bababa;
  height: 100%;
}
.list-index .detail .list-scroll .list-item .list .items {
  background-color: #fff;
  box-shadow: 0rpx 6rpx 15rpx 2rpx rgba(0, 0, 0, 0.1);
  width: 85%;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
}
.list-index .detail .list-scroll .list-item .list .items .item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  position: relative;
}
.list-index .detail .list-scroll .list-item .list .items .item .divider {
  width: 90%;
  height: 3rpx;
  position: absolute;
  background-color: #F2F6F9;
  top: 0;
}
.list-index .detail .list-scroll .list-item .list .items .item .icon {
  width: 15%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list-index .detail .list-scroll .list-item .list .items .item .detail {
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: start;
  justify-content: center;
}
.list-index .detail .list-scroll .list-item .list .items .item .amount {
  width: 25%;
  height: 100%;
  line-height: 120rpx;
  text-align: center;
}