.index {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}
.index .head {
  box-sizing: border-box;
  width: 100%;
  height: 30%;
  background-color: #003498;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0 25rpx 15rpx 25rpx;
}
.index .head .total {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.index .head .total .total-left {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 44%;
}
.index .head .total .total-left .total-pic {
  background-color: #00B2E0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  border: 4rpx solid #3361B6;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index .head .total .total-left .total-num {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.index .head .total .total-left .total-num .num-title {
  color: #fefeff;
  font-size: 28rpx;
}
.index .head .total .total-left .total-num .num {
  display: flex;
}
.index .head .total .total-left .total-num .num text {
  font-size: 60rpx;
  color: white;
}
.index .head .total .detail-btn {
  width: 26%;
  background-color: #3361B6;
  color: white;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 60rpx;
  text-align: center;
}
.index .head .mychart {
  width: 100%;
  height: 100%;
}
.index .list {
  width: 100%;
  height: 63%;
}
.index .tabbar {
  width: 100%;
  height: 7%;
}