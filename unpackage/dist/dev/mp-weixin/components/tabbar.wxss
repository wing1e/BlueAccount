.tabbar {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx 0 0 10rpx;
  border-top: 5rpx solid #b1b4b6;
  position: relative;
}
.tabbar .addbtn {
  width: 100rpx;
  height: 50rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: absolute;
  transform: translate(-50%, -100%);
  left: 50%;
  top: 0;
}
.tabbar .addbtn .cir {
  background-color: #fff;
  width: 100rpx;
  aspect-ratio: 1/1;
  border-radius: 50%;
  box-sizing: border-box;
  border: #b1b4b6 5rpx solid;
}
.tabbar .icon_add {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  background-color: #00B6E6;
  width: 80rpx;
  aspect-ratio: 1/1;
  border-radius: 50%;
  position: absolute;
  transform: translate(-50%, -50%);
  left: 50%;
  top: 0;
}
.tabbar .bottomBtn {
  width: 22%;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  font-size: 20rpx;
}
.tabbar .bottomBtn:nth-child(3) {
  margin-left: auto;
}